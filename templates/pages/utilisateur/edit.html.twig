{% extends 'base.html.twig' %}

{% block title %}Modification d'un utilisateur{% endblock %}


{% block body%}

    <div class="container">

        <h2 class="mt-4 d-flex justify-content-center">Modification d'un utilisateur</h2>

        {# read and display just one flash message type #}
        {% for message in app.flashes('Succes') %}
            <div class="alert alert-success mt-4 d-flex justify-content-center">
                {{ message }}
            </div>
        {% endfor %}

        {{ form_start(form) }}
            <div class="form-error">
                {{ form_errors(form) }}
            </div>

            <div class="form-group">
                {{ form_label(form.util_nom) }}
                {{ form_widget(form.util_nom) }}
                <div class="form-error">
                    {{ form_errors(form.util_nom) }}
                </div>
            </div>


            <div class="form-group">
                {{ form_label(form.util_prenom) }}
                {{ form_widget(form.util_prenom) }}
                <div class="form-error">
                    {{ form_errors(form.util_prenom) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.util_telephone) }}
                {{ form_widget(form.util_telephone) }}
                <div class="form-error">
                    {{ form_errors(form.util_telephone) }}
                </div>
            </div>


            <div class="form-group">
                {{ form_label(form.util_adresse) }}
                {{ form_widget(form.util_adresse) }}
                <div class="form-error">
                    {{ form_errors(form.util_adresse) }}
                </div>
            </div>


            <div class="form-group">
                {{ form_label(form.util_cp) }}
                {{ form_widget(form.util_cp) }}
                <div class="form-error">
                    {{ form_errors(form.util_cp) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.util_ville) }}
                {{ form_widget(form.util_ville) }}
                <div class="form-error">
                    {{ form_errors(form.util_ville) }}
                </div>
            </div>

            <div class="form-group d-flex justify-content-center mt-5 mb-5">
                {{ form_row(form.save) }}
                <div class="d-flex justify-content-center mt-3 ms-5 mb-5"><a href="{{ path('app_home')}}" class="btn btn-secondary">Retour</a></div>
            </div>

        {{ form_end(form) }}

    </div>

{% endblock %}