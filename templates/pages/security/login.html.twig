{% extends 'base.html.twig' %}

{% block title %}The district - Connexion{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="mt-4 mb-5 d-flex justify-content-center">Forumlaire de connexion</h2>

        {% for message in app.flashes('Succes') %}
            <div class="alert alert-success mt-4">
                {{ message }}
            </div>
        {% endfor %}

        {% if error %}
            <div class="alert alert-danger mt-4">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}


        <form action="{{ path('security.login') }}" method="post">
            <div class="mb-3">
                <label for="username" class="form-label d-flex justify-content-center">Adresse email :</label>
                <input type="email" class="form-control mb-5" id="username" placeholder="exemple@thedistrict.fr" name="_username" value="{{ last_username }}">
            </div>
            <div class="mb-3">
                <label for="password" class="form-label d-flex justify-content-center">Mot de passe</label>
                <input type="password" class="form-control" id="password" name="_password">
            </div>
            <div class="form-group d-flex justify-content-center mt-5">
                <button type="submit" class="btn btn-primary mt-4">
                    Se connecter
                </button>
            </div>
        </form>
    </div>
{% endblock %}
