{% extends 'base.html.twig' %}

{% block title %}Création d'une catégorie{% endblock %}

{% block body%}

    <div class="container">

        <h2 class="mt-4 d-flex justify-content-center">Création d'une categorie</h2>

        {{ form_start(form) }}
            <div class="form-error">
                {{ form_errors(form) }}
            </div>

            <div class="form-group">
                {{ form_label(form.cat_libelle) }}
                {{ form_widget(form.cat_libelle) }}
                <div class="form-error">
                    {{ form_errors(form.cat_libelle) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.cat_image) }}
                {{ form_widget(form.cat_image) }}
                <div class="form-error">
                    {{ form_errors(form.cat_image) }}
                </div>
            </div>

            <div class="form-group d-flex justify-content-center">
                {{ form_label(form.cat_active) }}
                {{ form_widget(form.cat_active) }}
                <div class="form-error">
                    {{ form_errors(form.cat_active) }}
                </div>
            </div>

            <div class="form-group d-flex justify-content-center mt-4">
                {{ form_row(form.save) }}
                <div class="d-flex justify-content-center mt-4 ms-5"><a href="{{ path('categorie')}}" class="btn btn-secondary">Retour</a></div>
            </div>

        {{ form_end(form) }}

    </div>

{% endblock %}